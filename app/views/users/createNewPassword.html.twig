{% extends('default.html.twig') %}

{% block content %}
    <div class="container center form_back_style col-sm-8 col-md-7 col-lg-8 col-xl-5">
        {% if (selector is not empty) and (validator is not empty) %}
            <h1 class="text-center pt-1 text-uppercase">Obnovit heslo</h1>
        <form action="{{ constant('URLROOT')}}/users/createNewPassword" method="POST" accept-charset="UTF-8" >
                <input class="form-control"  type="hidden" name="selector" value="{{ selector }}" >
                <input class="form-control"  type="hidden" name="validator" value="{{ validator }}" >
                <div class="form-outline mb-4">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon iconInput iconInputLeft pt-2" >
                                <i class="fas fa-lock"></i>
                            </div>
                            <input class="form-control" id="password" type="password" name="password" placeholder="Napište nové heslo *" required>
                            <div class="input-group-addon iconInput iconInputRight pt-2" onclick="openCloseEye('password', 'openEye', 'closeEye')">
                                <i id="closeEye" class="fas fa-eye-slash"></i>
                                <i id="openEye" class="fas fa-eye" style="display:none;"></i>
                            </div>
                        </div>
                    </div>
                    <span class="invalidFeedBack">
                        {{ passwordError }}
                    </span>
                </div>

                <div class="form-outline mb-4">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon iconInput iconInputLeft pt-2" >
                                <i class="fas fa-lock"></i>
                            </div>
                            <input class="form-control" id="password2" type="password" name="password-repeat" placeholder="Potvrdťě heslo *" required>
                            <div class="input-group-addon iconInput iconInputRight pt-2" onclick="openCloseEye('password2', 'openEye2', 'closeEye2')">
                                <i id="closeEye2" class="fas fa-eye-slash"></i>
                                <i id="openEye2" class="fas fa-eye" style="display:none;"></i>
                            </div>
                        </div>
                    </div>
                    <span class="invalidFeedBack">
                        {{ passwordRepeatError }}
                    </span>
                </div>
                <button class="myBtn btn btn-primary w-100 h1" type="submit" value="submit">Obnovit heslo</button>

        </form>
        {% else %}
            <p>{{ message }}</p>
        {% endif %}
    </div>
{% endblock %}