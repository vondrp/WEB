        function load_comment(){
            $.ajax({
                url: "{{ constant('URLROOT')}}/posts/displayComment/{{ post.id }}",
                method: "POST",
                success:function (data){
                    $('#display_comment').html(data);
                }
            })
        }
    </script>

{% endblock %}