{% extends('default.html.twig') %}

{% block content %}
    <div class="container center">
        <h1>Create new post</h1>

        <form action="{{ constant('URLROOT')}}/posts/create" method="POST">
            <div class="form-item">
                <input type="text" name="title" placeholder="Title">
                <span class="invalidFeedBack">
                    {{ post.titleError }}
            </span>
            </div>

            <div class="form-item">
                <textarea type="text" name="content" placeholder="Enter you post"></textarea>
                <span class="invalidFeedBack">
                    {{ post.contentError }}
            </span>
            </div>

            <button class="myBtn green" name="submit" type="submit">Submit</button>
        </form>
    </div>
{% endblock %}